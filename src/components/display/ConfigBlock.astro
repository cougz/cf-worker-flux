---
interface Props {
  title?: string;
  language?: 'nginx' | 'json' | 'javascript' | 'bash';
  code: string;
  copyable?: boolean;
}

const {
  title,
  language = 'javascript',
  code,
  copyable = true,
} = Astro.props;

const languageColors = {
  nginx: '#009639',
  json: '#f7df1e',
  javascript: '#f7df1e',
  bash: '#4eaa25',
};
---

<div class="config-block">
  {title && <div class="config-block-title">{title}</div>}
  <div class="config-block-content">
    <pre class="config-block-code"><code class={`language-${language}`}>{code}</code></pre>
    {copyable && (
      <button class="config-block-copy" title="Copy to clipboard">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
        </svg>
      </button>
    )}
  </div>
</div>

<style>
  .config-block {
    background: var(--bg-primary);
    border: 1px solid var(--border-light);
    border-radius: var(--radius-lg);
    overflow: hidden;
    margin-bottom: 16px;
  }

  .config-block-title {
    padding: 12px 16px;
    background: var(--bg-secondary);
    border-bottom: 1px solid var(--border-light);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-primary);
  }

  .config-block-content {
    position: relative;
    background: #1e1e1e;
  }

  .config-block-code {
    margin: 0;
    padding: 16px;
    overflow-x: auto;
  }

  .config-block-code code {
    font-family: 'Monaco', 'Menlo', 'Consolas', monospace;
    font-size: 0.875rem;
    line-height: 1.5;
    color: #d4d4d4;
  }

  .config-block-copy {
    position: absolute;
    top: 8px;
    right: 8px;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    border-radius: var(--radius-sm);
    padding: 6px;
    cursor: pointer;
    color: rgba(255, 255, 255, 0.7);
    transition: all var(--transition-fast);
  }

  .config-block-copy:hover {
    background: rgba(255, 255, 255, 0.2);
    color: white;
  }
</style>

<script define:vars={{ code }}>
  const copyButton = document.querySelector('.config-block-copy');

  if (copyButton) {
    copyButton.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(code);
        copyButton.setAttribute('title', 'Copied!');
        setTimeout(() => copyButton.setAttribute('title', 'Copy to clipboard'), 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  }
</script>
