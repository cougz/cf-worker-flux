---
interface Props {
  title?: string;
  description?: string;
}

const { title = 'CF Worker Flux', description = 'Dashboard for managing Cloudflare resources' } = Astro.props;
---

<header class="app-header">
  <div class="header-content">
    <div class="header-branding">
      <div class="logo-icon">☁️</div>
      <div class="header-text">
        <h1>{title}</h1>
        <p>{description}</p>
      </div>
    </div>
  </div>
  <div class="orange-line"></div>
</header>
