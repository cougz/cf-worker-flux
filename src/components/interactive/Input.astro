---
interface Props {
  id: string;
  label: string;
  type?: 'text' | 'email' | 'number' | 'password';
  placeholder?: string;
  defaultValue?: string;
  required?: boolean;
}

const {
  id,
  label,
  type = 'text',
  placeholder,
  defaultValue,
  required = false,
} = Astro.props;
---

<div class="input-wrapper">
  <label class="input-label" for={id}>
    {label}
    {required ? <span class="input-required">*</span> : null}
  </label>
  <input
    type={type}
    id={id}
    name={id}
    class="input"
    placeholder={placeholder}
    value={defaultValue}
    required={required}
  />
  <span class="input-error" id={`${id}-error`}></span>
</div>

<style>
  .input-wrapper {
    margin-bottom: 16px;
  }

  .input-label {
    display: block;
    font-weight: 500;
    color: var(--text-primary);
    margin-bottom: 8px;
  }

  .input-required {
    color: #dc3545;
    margin-left: 4px;
  }

  .input {
    width: 100%;
    padding: 12px 16px;
    font-family: inherit;
    font-size: 1rem;
    border: 2px solid var(--border-color);
    border-radius: var(--radius-md);
    background: var(--bg-primary);
    color: var(--text-primary);
    transition: all var(--transition-fast);
  }

  .input:focus {
    outline: none;
    border-color: var(--cf-orange);
    box-shadow: 0 0 0 3px rgba(248, 72, 36, 0.1);
  }

  .input:disabled {
    background: var(--bg-secondary);
    cursor: not-allowed;
    opacity: 0.7;
  }

  .input-error {
    display: block;
    margin-top: 4px;
    font-size: 0.875rem;
    color: #dc3545;
    min-height: 20px;
  }

  .input.error {
    border-color: #dc3545;
  }
</style>

<script define:vars={{ id, type, required }}>
  const input = document.getElementById(id);
  const errorDisplay = document.getElementById(`${id}-error`);

  const validate = () => {
    if (!input || !errorDisplay) return;

    let error = '';

    if (required && !input.value) {
      error = 'This field is required';
    } else if (type === 'email' && input.value) {
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(input.value)) {
        error = 'Please enter a valid email address';
      }
    } else if (type === 'number' && input.value) {
      const num = parseFloat(input.value);
      if (isNaN(num)) {
        error = 'Please enter a valid number';
      }
    }

    if (error) {
      input.classList.add('error');
      errorDisplay.textContent = error;
      return false;
    } else {
      input.classList.remove('error');
      errorDisplay.textContent = '';
      return true;
    }
  };

  if (input) {
    input.addEventListener('blur', validate);
    input.addEventListener('input', () => {
      if (input.classList.contains('error')) {
        validate();
      }
    });
  }
</script>
